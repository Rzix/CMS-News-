@model IEnumerable<CMSNews.Models.ViewModels.CommentViewModel>

@{
    ViewBag.Title = "Index";
    int id=1;
}

<h2>نمایش لیست</h2>

<p>
    @Html.ActionLink("درج کامنت جدید", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            #
        </th>
        <th>
            عنوان خبر
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommentText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
       
        <tr>
            <td>
                @id
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.News.NewsTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommentText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @if (item.IsActive == true)
                {
                    <span style="color: forestgreen; font-weight: bold;">
                        فعال
                    </span>
                }
                else
                {
                    <span style="color:dimgray; font-weight:bold;">
                        غیر فعال
                    </span>
                }
            </td>
            <td>
                @Html.ActionLink("ویرایش", "Edit", new { id = item.CommentId }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("جزئیات", "Details", new { id = item.CommentId }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("حذف", "Delete", new { id = item.CommentId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
        id += 1;
    }

</table>
