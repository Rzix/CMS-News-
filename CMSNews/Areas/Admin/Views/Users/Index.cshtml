@model IEnumerable<CMSNews.Models.ViewModels.UserViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>نمایش لیست</h2>

<p>
    @Html.ActionLink("درج کاربر جدید", "Create",null,new{@class="btn btn-success"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MobileNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegisterDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MobileNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegisterDate)
        </td>
        <td>
            @if (item.IsActive == true)
            {
                <span style="color: forestgreen; font-weight: bold;">
                    فعال
                </span>
            }
            else
            {
                <span style="color:dimgray; font-weight:bold;">
                    غیر فعال
                </span>
            }
        </td>
        <td>
            @Html.ActionLink("ویرایش", "Edit", new { id=item.UserId },new{@class="btn btn-warning"}) |
            @Html.ActionLink("جزئیات", "Details", new { id=item.UserId },new{@class="btn btn-info"}) |
            @Html.ActionLink("حذف", "Delete", new { id=item.UserId },new{@class="btn btn-danger"})
        </td>
    </tr>
}

</table>
