@model IEnumerable<CMSNews.Models.ViewModels.NewsViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>نمایش لیست</h2>

<p>
    @Html.ActionLink("درج خبر جدید", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageName)
        </th>
        <th>
            @Html.DisplayNameFor(model=>model.NewsGroupId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NewsTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.RegisterDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.See)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Like)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NewsGroupId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="~/images/news/@item.ImageName" class="img60x60" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewsGroupId)
            </td>
            
            <td class="wordChange">
                @Html.Raw(item.Description)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.RegisterDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.See)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Like)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewsGroupId)
            </td>
            <td>
                @Html.ActionLink("ویرایش", "Edit", new { id = item.NewsId }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("جزئیات", "Details", new { id = item.NewsId }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("حذف", "Delete", new { id = item.NewsId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>
