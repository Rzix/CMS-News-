@model CMSNews.Models.ViewModels.NewsViewModel

<div class="allLastOneCard">
    <div class="oneLastNews">
        <div class="oneLastNews-img-holder">

            
            
            <div class="row ">
                <div class="col-md-12">
                    <img src="~/images/news/@Model.ImageName" alt="Blog image">
                </div>
            </div>

                <br />
                <div class="row infoLastNew text-center">
                    
                        <div class="col-md-6">
                            <h3 class="blog-title">@Model.NewsTitle</h3>
                        </div>
                        <div class="col-md-6">
                            <span class="blog-time">@Model.RegisterDate</span>
                        </div>
                   
                </div>
           

            <div class="LastOneNewContent">
                <p class="description">
                    @Html.Raw(Model.Description)
                </p>
            </div>
        </div>

    </div>
</div>