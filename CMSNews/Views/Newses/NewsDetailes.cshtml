@model CMSNews.Models.ViewModels.NewsViewModel
@{
    ViewBag.Title = "جزئیات خبر";
}



<div class="container">
    <div class="row">
        <div class="col-md-9">
            <section class="home" id="home" style="direction: rtl;">
                <div class="row">
                    <div class="content">
                        <h1>@Model.NewsTitle</h1>
                        <p>
                            @Html.Raw(Model.Description)
                        </p>
                    </div>


                    <div class="detailImage">
                        <img src="~/images/news/@Model.ImageName" alt="" />
                    </div>
                </div>

            </section>
        </div>
        <div class="col-md-3">
                @Html.Action("LastNews", "Newses", new { co = 3 })
        </div>
    </div>
</div>


