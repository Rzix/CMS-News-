
@model IEnumerable<CMSNews.Models.ViewModels.NewsGroupViewModel>

<hr />
<div class="text-center">
    <h3>گروه خبر ها</h3>
</div>
<main id="main">
    <div class="allCards">
        <div class="col-12">
            <div class="row ">
                @foreach (var item in Model)
                {
                    <div class="card col-2" tabindex="0">
                        <img src="~/images/news-group/@item.ImageName"
                             alt="@item.NewGroupTitle" />
                        <div class="text">
                            <a href="/Newses/ShowNewsList/@item.NewGroupId"><h2>@item.NewGroupTitle</h2></a>
                        </div>
                    </div>

                }
            </div>

        </div>
    </div>
</main>



